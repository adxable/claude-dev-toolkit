{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Copy the 'hooks' section to your project's .claude/settings.json or .claude/settings.local.json",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/skill-activation-prompt.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/knowledge_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/user_prompt_submit.py --log-only || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/pre_tool_use.py || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/post_tool_use.py || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/notification.py --notify || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/knowledge_ingestor.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/stop.py --chat || true"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/subagent_stop.py || true"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/pre_compact.py || true"
          }
        ]
      }
    ]
  }
}
