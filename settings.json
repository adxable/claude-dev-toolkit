{
  "permissions": {
    "allow": [
      "Edit:*",
      "Write:*",
      "MultiEdit:*",
      "NotebookEdit:*",
      "Bash:*"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["sequential-thinking", "playwright"],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/dev_standards_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/context_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/state_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/smart_context_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/skill-activation-prompt.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/circuit_breaker.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/ship_loader.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/user_prompt_submit.py --log-only || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/pre_tool_use.py || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/post_tool_use.py || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/notification.py --notify || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/context_updater.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/cost_tracker.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/memory_updater.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/state_updater.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/ship_updater.py || true"
          },
          {
            "type": "command",
            "command": "uv run hooks/stop.py --chat --summary || true"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/subagent_stop.py || true"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run hooks/pre_compact.py || true"
          }
        ]
      }
    ]
  }
}
